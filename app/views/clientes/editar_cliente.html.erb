<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">    
                <%= form_for :cliente, :url => {:controller => "clientes", :action => "actualizar_cliente", :id => @cliente} do |form| %>
                <div class="form-group">
                    <h1>Editar Cliente</h1>
                <p>
                  <%= form.label :nombre, "Nombre"%>
                  <%= form.text_field :nombre, :class => "form-control"%>  
                </p>
                </div>
                
                <div class="form-group">
                <p>
                  <%= form.label :apellido, "Apellido"%>
                  <%= form.text_field :apellido,:class => "form-control"%>  
                </p>
                </div>
                
                <div class="form-group">
                <p>
                  <%= form.label :foto, "Foto"%>
                  <%= form.text_field :foto,:class => "form-control"%>  
                </p>
                
                <div class="form-group">
                <p>
                  <%= form.label :direccion, "Direccion"%>
                  <%= form.text_field :direccion,:class => "form-control"%>  
                </p>
                </div>
                <%= form.submit "Actualizar", :class => "btn btn-primary"%>

                <%end%>

           </div>
        </div>
    </div>
</div>